#!/bin/bash

case $1 in
  up)
    amixer -D pulse set Master on
    amixer -D pulse set Master 5%+
    ;;
  down)
    amixer -D pulse set Master on
    amixer -D pulse set Master 5%-
    ;;
  mute)
    amixer -D pulse set Master 1+ toggle
    ;;
esac

dwm_statusbar_pid="$(pgrep dwm_statusbar)"
if [ -n "$dwm_statusbar_pid" ]; then
  kill -SIGUSR1 "$dwm_statusbar_pid"
fi
